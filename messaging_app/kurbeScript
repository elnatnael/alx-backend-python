#!/bin/bash

# Check for Minikube
if ! command -v minikube &>/dev/null; then
  echo "âŒ Minikube is not installed. Please install it first: https://minikube.sigs.k8s.io/docs/start/"
  exit 1
fi

# Check for kubectl
if ! command -v kubectl &>/dev/null; then
  echo "âŒ kubectl is not installed. Please install it first: https://kubernetes.io/docs/tasks/tools/"
  exit 1
fi

# Start Minikube
echo "ğŸš€ Starting Minikube..."
minikube start --driver=hyperkit

# Fallback to docker if hyperkit fails (macOS specific logic)
if [ $? -ne 0 ]; then
  echo "âš ï¸ Failed with Hyperkit. Trying Docker instead..."
  minikube start --driver=docker
fi

# Verify Minikube is running
if [ $? -ne 0 ]; then
  echo "âŒ Minikube failed to start with both drivers."
  exit 1
fi

# Check cluster info
echo "ğŸ” Verifying Kubernetes cluster status..."
kubectl cluster-info

if [ $? -ne 0 ]; then
  echo "âŒ Failed to get cluster info. Is the cluster running?"
  exit 1
fi

# List all pods
echo "ğŸ“¦ Listing all pods in all namespaces..."
kubectl get pods --all-namespaces

exit 0
